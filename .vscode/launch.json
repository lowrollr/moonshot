    "version": "0.2.0",
    "configurations": [
        {
            "name": "Frontend",
            "type": "python",
            "request": "attach",
            "port": 5678,
            "host": "localhost",
            "justMyCode": false,
            "pathMappings": [
                {
                    "localRoot": "${workspaceFolder}/frontend/",
                    "remoteRoot": "/code"
                }
            ]
        },
        {
            "name": "Data Consumer",
            "type": "go",
            "request": "attach",
            "mode": "remote",
            "remotePath": "/go/src",
            "port": 4040,
            "host": "127.0.0.1",
            "cwd": "${workspaceFolder}/main_data_consumer/src/",
            "showLog": true
        },
        {
            "name": "Portfolio Manager",
            "type": "go",
            "request": "attach",
            "mode": "remote",
            "remotePath": "/go/src",
            "port": 4000,
            "host": "127.0.0.1",
            "cwd": "${workspaceFolder}/portfolio_manager/src/",
            "showLog": true
            // "stopOnEntry":true
        },
        {
            "name": "Beverly Hills",
            "type": "python",
            "request": "attach",
            "port": 8765,
            "host": "localhost",
            "pathMappings": [
                {
                    "localRoot": "${workspaceFolder}/beverly_hills/src/",
                    "remoteRoot": "/code"
                }
            ]
        },
    ]
}