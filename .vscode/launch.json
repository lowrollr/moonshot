{
    // Use IntelliSense to learn about possible attributes.
    // Hover to view descriptions of existing attributes.
    // For more information, visit: https://go.microsoft.com/fwlink/?linkid=830387
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Python: Flask",
            "type": "python",
            "request": "launch",
            "module": "flask",
            "env": {
                "FLASK_APP": "app.py",
                "FLASK_ENV": "development",
                "FLASK_DEBUG": "0"
            },
            "cwd": "${workspaceFolder}/frontend",
            "args": [
                "run",
                "--no-debugger",
                "--no-reload"
            ],
            "jinja": true
        },
        {
            "name": "Python: Current File",
            "type": "python",
            "request": "launch",
            "program": "${file}",
            "console": "integratedTerminal"
        },
        {
            "name": "Delve into Main Data Docker",
            "type": "go",
            "request": "attach",
            "mode": "remote",
            "remotePath": "/go/src",
            "port": 4040,
            "host": "127.0.0.1",
            "cwd": "${workspaceFolder}/main_data_consumer/src/",
            "showLog": true
            // "stopOnEntry":true
        },
        {
            "name": "Delve into PM Docker",
            "type": "go",
            "request": "attach",
            "mode": "remote",
            "remotePath": "/go/src",
            "port": 4000,
            "host": "127.0.0.1",
            "cwd": "${workspaceFolder}/portfolio_manager/src/",
            "showLog": true
            // "stopOnEntry":true
        },
        {
            "name": "Python: Backtest Debug",
            "type": "python",
            "request": "launch",
            "cwd": "${workspaceFolder}/back_testing/",
            "program": "__main__.py",
            "console": "integratedTerminal"
        },
        {
            "name": "Python: Remote Attach",
            "type": "python",
            "request": "attach",
            "port": 5678,
            "host": "172.21.0.4",
            "pathMappings": [
                {
                    "localRoot": "${workspaceFolder}/strategy_manager",
                    "remoteRoot": "/code"
                }
            ]
        }
    ]
}